<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="manor9421.com.dailynutrition">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddProductActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_add_product" />
        <activity
            android:name=".NewIngestionActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_new_ingestion" />
        <activity
            android:name=".ProductListActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_product_list" />
        <activity
            android:name=".DailyNutritionActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_daily_nutrition" />
        <activity android:name=".ProductDetailsActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".DailyNutritionDetailsActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".InfoActivity"></activity>
    </application>

</manifest>