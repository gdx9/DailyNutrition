<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false">
    <shape android:shape="rectangle">
        <!--solid android:color="@color/button_background"/-->
        <gradient
            android:angle="0"
            android:startColor="@color/button_background_start"
            android:endColor="@color/button_background_end"
            android:type="linear"
            />
        <!--stroke
            android:width="3dp"
            android:color="#eaefff" /-->
        <corners
            android:topLeftRadius="1000dp"
            android:topRightRadius="1000dp"
            android:bottomLeftRadius="1000dp"
            android:bottomRightRadius="1000dp"

            />
    </shape>
</item>
<item android:state_pressed="true">
    <shape android:shape="rectangle">
        <solid android:color="@color/button_pressed_background"/>
        <corners
            android:topLeftRadius="1000dp"
            android:topRightRadius="1000dp"
            android:bottomLeftRadius="1000dp"
            android:bottomRightRadius="1000dp"
            />
    </shape>
</item>
</selector>