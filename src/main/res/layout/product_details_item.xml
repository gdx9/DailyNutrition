<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/listItemBackground">
    <TextView
        android:id="@+id/paramName"
        android:layout_width="@dimen/zeroWidthHeight"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/prod_details_item_tv_layout_margin"
        android:layout_weight="4"
        android:textSize="@dimen/prod_details_item_tv_textSize"
        android:paddingLeft="@dimen/prod_details_item_tv_paddingLeftRight"
        android:paddingRight="@dimen/prod_details_item_tv_paddingLeftRight"
        android:text=""/>
    <TextView
        android:id="@+id/paramVal"
        android:layout_width="@dimen/zeroWidthHeight"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/prod_details_item_tv_layout_margin"
        android:layout_weight="3"
        android:textSize="@dimen/prod_details_item_tv_textSize"
        android:paddingLeft="@dimen/prod_details_item_tv_paddingLeftRight"
        android:paddingRight="@dimen/prod_details_item_tv_paddingLeftRight"
        android:text="" />

</LinearLayout>